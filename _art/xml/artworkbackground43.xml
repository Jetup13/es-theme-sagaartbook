<theme>
<formatVersion>7</formatVersion>
   <subset name="logocolor" displayName="Logo Color">
      <include name="white" displayName="White">./logoswhite.xml</include>
      <include name="color" displayName="Color">./logoscolor.xml</include>
   </subset>
	<view name="basic">
		<image name="bg" extra="true">
        <path>./../_art/assets/bgoverlay.png</path>
        <tile>true</tile>
        <origin>0.5 0.5</origin>
        <pos>0.5 0.5</pos>
        <size>1 1</size>
		<zIndex>0</zIndex>
    </image>
	</view>
	
    <view name="system">
    <carousel name="systemcarousel">
        <color>00000000</color>
        <origin>0 0</origin>
        <pos>0 0</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.5 0.5</logoSize>
        <maxLogoCount>1</maxLogoCount>
    </carousel>
   </view>	

    <view name="system">
	<image name="overlay" extra="true">
        <path>./../_art/assets/clearoverlay.png</path>
        <tile>true</tile>
        <maxSize>1 1</maxSize>
		<zIndex>1</zIndex>
    </image>
    <image name="arkwork" extra="true">
        <path>./../_art/backgrounds43/${system.theme}.jpg</path>
        <tile>false</tile>
        <origin>0.5 0.5</origin>
        <pos>0.5 0.5</pos>
        <size>1 1</size>
		<zIndex>0</zIndex>
    </image>
   </view>	
</theme>
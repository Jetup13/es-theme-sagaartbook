<theme>
<formatVersion>7</formatVersion>

   <subset name="screenshotoverlay" displayName="Screenshot Overlay">
	  <include name="dark" displayName="Dark">./../../_art/xml/screenshotoverlaydark.xml</include>
	  <include name="light" displayName="Light">./../../_art/xml/screenshotoverlaylight.xml</include>
	  <include name="off" displayName="Off"/>
   </subset>
	<view name="system,basic">
		<image name="bg" extra="true">
        <path>./../_art/assets/bgoverlay.png</path>
        <tile>true</tile>
        <origin>0.5 0.5</origin>
        <pos>0.5 0.5</pos>
        <size>1 1</size>
		<zIndex>0</zIndex>
    </image>
	</view>

    <view name="system">
	<image name="ssoverlay2" extra="true">
        <path>./../_art/assets/slice.png</path>
        <tile>false</tile>
        <origin>0.5 0.5</origin>
        <pos>0.5 0.5</pos>
        <maxSize>1 1</maxSize>
		<zIndex>3</zIndex>
    </image>
	
    <image name="screenshots" extra="true">
        <path>./../_art/screenshots/${system.theme}.jpg</path>
        <tile>false</tile>
        <origin>0.5 0.5</origin>
        <pos>0.5 0.5</pos>
        <maxSize>1 1</maxSize>
		<zIndex>1</zIndex>
    </image>
   </view>	
</theme>